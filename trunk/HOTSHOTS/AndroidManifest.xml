            android:name="com.ivd.hotshots.TryAgainActivity"
            android:label="@string/title_activity_try_again"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        <activity
            android:name="com.ivd.hotshots.DeleteActivity"
            android:label="@string/title_activity_delete"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
