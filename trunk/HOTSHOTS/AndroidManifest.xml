        <activity
            android:name="com.ivd.hotshots.ContactBuildActivity"
            android:label="@string/title_activity_contact_build"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        <activity
            android:name="com.ivd.hotshots.AddContactsActivity"
            android:label="@string/title_activity_add_contacts"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        <activity
            android:name="com.ivd.hotshots.TakeShotActivity"
            android:label="@string/title_activity_take_shot"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        <activity
            android:name="com.ivd.hotshots.SenderQuestionActivity"
            android:label="@string/title_activity_sender_question"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        <activity
            android:name="com.ivd.hotshots.SenderAnswerActivity"
            android:label="@string/title_activity_sender_answer"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        <activity
            android:name="com.ivd.hotshots.ContactsActivity"
            android:label="@string/title_activity_contacts"
